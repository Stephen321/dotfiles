# Private settings in include file
[include]
  path = ~/.gitconfig.local

# Dracula theme
[url "https://github.com/dracula/"]
  insteadOf = dracula://

# Colors
[color]
  ui = auto
[color "branch"]
  current = cyan bold reverse
  local = white
  plain =
  remote = cyan
[color "diff"]
  commit =
  func = cyan
  plain =
  whitespace = magenta reverse
  meta = white
  frag = cyan bold reverse
  old = red
  new = green
[color "grep"]
  context =
  filename =
  function =
  linenumber = white
  match =
  selected =
  separator =
[color "interactive"]
  error =
  header =
  help =
  prompt =
[color "status"]
  added = green
  changed = yellow
  header =
  localBranch =
  nobranch =
  remoteBranch = cyan bold
  unmerged = magenta bold reverse
  untracked = red
  updated = green bold


[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
    ; https://dandavison.github.io/delta/custom-themes.html
    ; features = gruvbox-dark
    side-by-side = true
    line-numbers = true
    hyperlinks = true

[merge]
    conflictstyle = zdiff3tool = nvimdiff

[diff]
    tool = nvimdiff
